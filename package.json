{
  "name": "poc-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:client": "turbo build --filter=poc-frontend",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky || true",
    "test": "turbo run test",
    "test:api": "turbo run test --filter=poc-backend",
    "test:client": "turbo run test --filter=poc-frontend",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/api/{src,apps,libs,test}/**/*.ts": [
      "eslint --fix"
    ],
    "apps/api/src/**/*.ts": [
      "prettier --write"
    ],
    "apps/api/test/**/*.ts": [
      "prettier --write"
    ],
    "apps/client/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "apps/client/src/**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --write"
    ]
  }
}
